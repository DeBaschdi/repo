<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.telerising-cloudcontrol"
version="0.0.1"
name="Telerising Cloudcontrol VOD"
provider-name="DeBaschdi, Birger Jesch">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.requests"/>
</requires>
<extension point="xbmc.python.pluginsource" library="default.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Telerising Cloud Control</summary>
  <description lang="en_GB">Watch / Download and Delete Cloud Recordings via Telerising API. Get Access to Zattoo VOD Service</description>
  <disclaimer lang="en_GB">Get Telerising here :
    https://github.com/sunsettrack4/telerising </disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.png</screenshot>
    <screenshot>resources\screenshot-02.png</screenshot>
    <screenshot>resources\screenshot-03.png</screenshot>
    <screenshot>resources\screenshot-04.png</screenshot>
  </assets>
  <news>Initial Release</news>
</extension>
</addon>

<addon id="service.telerising" name="Telerising API" version="0.1.1" provider-name="DeBaschdi, sunsettrack4">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <platform>linux</platform>
        <summary>Telerising API</summary>
        <description> Zattoo and Reseller for tvHeadend, VLC and IPTVsimple</description>
        <source>https://github.com/DeBaschdi/repo/tree/master/service.telerising-api/</source>
        <forum>https://www.kodinerds.net/index.php/Thread/60875-Telerising-API-Zattoo-f%C3%BCr-tvHeadend-und-VLC-v0-2-4-2020-01-25/</forum>
    </extension>
</addon>

</addons>
